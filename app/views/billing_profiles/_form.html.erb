<%= form_with(model: billing_profile, local: true) do |f| %>
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="form-group">
                <%= f.label t('billing_profiles.name') %><br />
                <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.hidden_field :user_id, value: billing_profile.user_id %>
            </div>

            <div class="form-group">
                <%= f.label t('billing_profiles.vat_code') %><br />
                <%= f.text_field :vat_code, class: "form-control" %>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="form-group">
                <%= f.label t('billing_profiles.street') %><br />
                <%= f.text_field :street, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label t('billing_profiles.city') %><br />
                <%= f.text_field :city, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label t('billing_profiles.postal_code') %><br />
                <%= f.text_field :postal_code, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label t('billing_profiles.country') %><br />
                <%= f.text_field :country, class: "form-control" %>
            </div>
        </div>

        <div class="col-12">
            <%= f.submit t(:submit), class: "btn btn-primary form-control mb-2" %>
            <%= link_to t(:back), :back, class: "btn btn-secondary form-control" %>
        </div>
    </div>
<% end %>
