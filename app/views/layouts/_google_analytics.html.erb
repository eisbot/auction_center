<% if Rails.env.production? && google_tracking_id %>
    <div id="google-tracking-id" class="ui message hidden"
         data-value="<%= google_tracking_id %>">
    </div>

    <script async src="https://www.googletagmanager.com/gtag/js?id=<%= google_tracking_id %>"></script>
    <%= javascript_pack_tag 'google_analytics' %>
<% end %>
