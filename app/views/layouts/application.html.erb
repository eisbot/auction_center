<!DOCTYPE html>
<html>
    <head>
        <title>Auction Center</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= javascript_pack_tag 'semantic' %>
        <%= stylesheet_pack_tag 'semantic', media: 'all' %>

        <%= stylesheet_pack_tag 'stylesheets/application', media: 'all' %>
        <%= javascript_pack_tag 'application' %>
    </head>

    <body>
        <div class="app-wrapper">
            <% flash.each do |key, value| -%>
                <div class="ui message">
                    <div class="header <%= key %>" id="flash"><%= h value %></div>
                </div>
            <% end %>

            <%= render 'common/header' %>

            <main class="main-layout" role="main">
                <%= yield :hero %>
                <%= yield %>
            </main>

            <%= render 'common/footer' %>
        </div>
    </body>
</html>
