<!DOCTYPE html>
<html>
    <head>
        <title>Auction Center</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_pack_tag 'stylesheets/application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <div class="app-wrapper">
            <%= render 'common/header' %>

            <main class="main-layout" role="main">
                <div class="main-hero">
                </div>

                <div class="ui container">
                    <div class="row mt-2">
                        <div class="col-12">
                            <div id="flash">
                                <% flash.each do |key, value| -%>
                                    <div class="alert alert-primary"><%=h value %></div>
                                <% end %>
                            </div>
                        </div>
                    </div>

                    <%= yield %>
                </div>
            </main>
        </div>

        <br><br><br>
        <%= render 'common/footer' %>
    </body>
</html>
