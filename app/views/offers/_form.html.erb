<%= form_with(model: offer, local: true, url: url) do |f| %>
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="form-group">
                <%= f.hidden_field :user_id, value: offer.user_id %>
            </div>

            <div class="form-group">
                <%= f.hidden_field :auction_id, value: offer.auction_id %>
            </div>

            <div class="form-group">
                <%= f.label :price %>
                <%= f.number_field :price, class: "form-control", min: 0 %>
            </div>
        </div>

        <div class="col-12 col-lg-6">
        </div>

        <div class="col-12">
            <%= f.submit t(:submit), class: "btn btn-primary form-control mb-2" %>
            <%= link_to t(:back), :back, class: "btn btn-secondary form-control" %>
        </div>
    </div>
<% end %>
