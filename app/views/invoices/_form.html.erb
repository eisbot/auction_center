<%= form_with(model: invoice, local: true, url: url) do |f| %>
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="form-group">
                <%= f.label :billing_profile, t('invoices.billing_profile') %><br />
                <%= f.select :billing_profile_id,
                BillingProfile.where(user_id: invoice.user_id).collect { |b| [b.name, b.id] },
                class: "form-control form-control" %><br>

                <%= link_to t(:new_billing_profile),  new_billing_profile_path %>
            </div>
        </div>

        <div class="col-12">
            <%= f.submit t(:submit), class: "btn btn-primary form-control mb-2" %>
            <%= link_to t(:back), :back, class: "btn btn-secondary form-control" %>
        </div>
    </div>
<% end %>
