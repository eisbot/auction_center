<% content_for :hero do %>
    <div class="main-hero main-hero--orange">
        <h1><%= t('.title') %></h1>
        <%= @setting.code %>
    </div>
<% end %>

<div class="u-container">
    <div class="ui segment padded-block">
        <% if @setting.errors.any? %>
            <div class="ui message">
                <div class="header">
                    <%= pluralize(@setting.errors.count, "error") %> <%= t('.errors') %>
                </div>
                <ul id="errors">
                    <% @setting.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <%= render 'form', setting: @setting, url: admin_setting_path(@setting) %>
    </div>
</div>
