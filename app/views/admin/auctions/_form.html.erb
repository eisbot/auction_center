<%= form_with(model: auction, local: true, url: url) do |f| %>
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="form-group">
                <%= f.label :domain_name, t('auctions.domain_name') %><br />
                <%= f.text_field :domain_name, class: "form-control",
                     value: auction.domain_name %>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="form-group">
                <%= f.label :starts_at, t('auctions.starts_at') %><br />
                <%= f.datetime_field :starts_at, class: "form-control", min: Time.zone.today %>
            </div>
            <div class="form-group">
                <%= f.label :ends_at, t('auctions.ends_at') %><br />
                <%= f.datetime_field :ends_at, class: "form-control", min: Time.zone.today %>
            </div>
        </div>

        <div class="col-12">
            <%= f.submit t(:submit), class: "btn btn-primary form-control mb-2" %>
            <%= link_to t(:back), :back, class: "btn btn-secondary form-control" %>
        </div>
    </div>
<% end %>
