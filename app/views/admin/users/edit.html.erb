<% content_for :hero do %>
    <div class="main-hero main-hero--orange">
        <h1><%= t('.title') %></h1>
    </div>
<% end %>

<div class="u-container">
    <div class="ui segment padded-block">
            <% if @user.errors.any? %>
                <h3 id="error-explanation">
                    <%= pluralize(@user.errors.count, "error") %> <%= t('.errors') %>
                </h3>
                <ul id="errors">
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
        </div>

        <%= render 'form', user: @user, url: admin_user_path(@user) %>
    </div>
</div>

<%= javascript_pack_tag 'users', 'data-turbolinks-track': 'reload' %>
