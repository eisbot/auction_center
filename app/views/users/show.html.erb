<div class="row text-center">
    <div class="col-12">
        <h1 class="mb-3 mt-4"><%= t('.title') %></h1>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h2><%= @user.display_name %></h2>

                <dl id="user-details-list" class="mb-4 no-bullets">
                    <dt><%= t('users.email') %></dt>
                    <dd><%= @user.email %></dd>

                    <dt><%= t('users.mobile_phone') %></dt>
                    <dd><%= @user.mobile_phone %></dd>

                    <dt><%= t('users.roles') %></dt>
                    <dd><%= @user.roles.join(', ') %></dd>

                    <dt><%= t('users.country_code') %></dt>
                    <dd><%= @user.country_code %></dd>

                    <dt><%= t('users.identity_code') %></dt>
                    <dd><%= @user.identity_code %></dd>

                    <dt><%= t('created_at') %></dt>
                    <dd><%= I18n.l(@user.created_at) %></dd>

                    <dt><%= t('users.terms_and_conditions') %></dt>
                    <dd><%= link_to t('.review_terms_and_conditions'), Setting.terms_and_conditions_link, class: "card-link mt" %></dd>
                </dl>

                <%= link_to t(:edit), edit_user_path(@user), class: "card-link mt" %>
                <%= link_to t(:billing), billing_profiles_path, class: "card-link mt" %>
            </div>
        </div>
    </div>
</div>
